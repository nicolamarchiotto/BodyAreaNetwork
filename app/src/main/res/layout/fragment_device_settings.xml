<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MainActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fragment_device_settings_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_thingy_gray"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fragment_device_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="DEVICE SETTINGS"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_device_settings_btn_back"
            app:layout_constraintStart_toEndOf="@+id/fragment_device_settings_btn_back"
            app:layout_constraintTop_toTopOf="@+id/fragment_device_settings_btn_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fragment_device_settings_txt_connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="Status: Not connected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_device_settings_btn_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fragment_device_settings_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Name: xyz"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_device_settings_txt_connection_status" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fragment_device_settings_txt_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Address: xyz"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_device_settings_txt_name" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_sensors_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="32dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_device_settings_txt_addr" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
